<%- include('./partials/Header.ejs', {hidden: true}) %>

<style>
    /* Layout container */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        box-sizing: border-box;
    }

    /* Replace inline grid with a responsive grid via id */
    #hero-layout {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 2rem;
        align-items: start;
    }

    /* Sidebar sizing */
    #hero-layout aside {
        min-width: 0;
    }

    /* Main card */
    #hero-layout section {
        background: white;
        padding: 2.5rem;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-sm);
    }

    /* Drop zone responsiveness */
    #dropZone {
        border-radius: 8px;
        padding: 2rem;
        transition: all 0.2s ease;
        cursor: pointer;
        border: 2px dashed var(--color-border);
        text-align: center;
    }

    /* File preview and hero image responsiveness */
    #filePreview img {
        width: 100%;
        height: auto;
        max-height: 300px;
        object-fit: cover;
        border-radius: 8px;
    }

    .hero-preview img {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    /* Smaller screens */
    @media (max-width: 900px) {
        #hero-layout {
            grid-template-columns: 1fr;
        }

        /* place main content before sidebar on small screens */
        #hero-layout section {
            order: 1;
            padding: 1.5rem;
        }
        #hero-layout aside {
            order: 2;
        }

        .hero-preview img {
            height: 300px;
        }

        #dropZone {
            padding: 1rem;
        }

        .btn.btn-primary {
            width: 100%;
            text-align: center;
        }
    }

    @media (max-width: 600px) {
        #hero-layout section {
            padding: 1rem;
        }
        .hero-preview img {
            height: 220px;
        }
        #dropZone svg { width: 40px; height: 40px; }
    }
</style>

<main style="padding: var(--spacing-xl) 0; background-color: var(--color-bg-secondary); min-height: 80vh;">
    <div class="container">

        <!-- Flash Messages -->
        <% if(typeof error !=='undefined' && error.length> 0) { %>
            <div
                style="background: #fee2e2; color: #dc2626; padding: 1rem; border-radius: var(--border-radius-md); margin-bottom: 2rem; text-align: center;">
                <%= error[0] %>
            </div>
        <% } %>
        <% if (typeof success !=='undefined' && success.length> 0) { %>
            <div
                style="background: #dcfce7; color: #166534; padding: 1rem; border-radius: var(--border-radius-md); margin-bottom: 2rem; text-align: center;">
                <%= success[0] %>
            </div>
        <% } %>

        <div id="hero-layout">

            <!-- Sidebar -->
            <aside>
                <%- include('./partials/SellerSidebar.ejs') %>
            </aside>

            <!-- Main Content -->
            <section>
                <div
                    style="margin-bottom: 2rem; border-bottom: 1px solid var(--color-border); padding-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;">
                    <h2 style="font-size: 1.5rem; margin: 0;">Manage Hero Image</h2>
                </div>

                <!-- Upload Hero Image Form -->
                <div class="bg-white p-6 rounded-lg shadow-sm mb-8"
                    style="border: 1px solid var(--color-border); padding: 1.5rem; border-radius: 8px;">
                    <h3 class="text-lg font-bold mb-4 font-heading text-primary"
                        style="font-size: 1.2rem; margin-bottom: 1rem;">Upload New Hero Image</h3>
                    <p style="color: var(--color-text-secondary); margin-bottom: 1.5rem; font-size: 0.95rem;">
                        Upload a high-quality image that will be displayed as the hero banner on your storefront. Recommended dimensions: 1920x600px (16:5 aspect ratio).
                    </p>

                    <!-- RESTORED BACKEND FORM ATTRIBUTES -->
                    <form id="heroForm"
                          action="/seller/upload-hero"
                          method="post"
                          enctype="multipart/form-data"
                          style="display: flex; flex-direction: column; gap: 1rem;">
                        <div style="flex: 1;">
                            <label class="block text-sm font-medium text-gray-700 mb-2"
                                style="display: block; margin-bottom: 0.75rem; font-weight: 500;">
                                Hero Image
                            </label>
                            <div id="dropZone"
                                 onmouseover="this.style.borderColor='#ec4899'; this.style.backgroundColor='#fdf2f8';"
                                 onmouseout="this.style.borderColor='var(--color-border)'; this.style.backgroundColor='transparent';">
                                <input type="file" name="hero" id="heroInput" required accept="image/*"
                                    style="display: none;">
                                <svg style="width: 48px; height: 48px; margin: 0 auto 1rem; color: #ec4899;"
                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                                    </path>
                                </svg>
                                <p style="margin: 0; color: var(--color-text-primary); font-weight: 500;">
                                    Drag and drop your image here
                                </p>
                                <p style="margin: 0.5rem 0 0 0; color: var(--color-text-secondary); font-size: 0.9rem;">
                                    or <span style="color: #ec4899; cursor: pointer; font-weight: 500;">click to browse</span>
                                </p>
                                <p style="margin: 0.75rem 0 0 0; color: var(--color-text-secondary); font-size: 0.85rem;">
                                    Accepted formats: JPG, PNG (Max 5MB)
                                </p>
                            </div>
                            <div id="filePreview" style="margin-top: 1rem;"></div>
                        </div>
                        <button type="submit" class="btn btn-primary" style="padding: 0.8rem 2rem; align-self: flex-start;">
                            Upload Hero Image
                        </button>
                    </form>
                </div>

                <!-- Current Hero Image Preview -->
                <h3 style="font-size: 1.2rem; margin-bottom: 1rem; margin-top: 2rem;">Current Hero Image</h3>
                <div class="hero-preview"
                    style="border: 1px solid var(--color-border); border-radius: 8px; overflow: hidden; background-color: var(--color-bg-secondary);">
                    <% if(typeof essentials !=='undefined' && essentials && essentials.heroImage) { %>
                        <img src="<%= essentials.heroImage %>" alt="Current Hero Image">
                    <% } else { %>
                        <div style="height: 400px; background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%); display: flex; align-items: center; justify-content: center;">
                            <div style="text-align: center;">
                                <svg style="width: 64px; height: 64px; margin: 0 auto 1rem; color: #999;"
                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2 2v12a2 2 0 002 2z">
                                    </path>
                                </svg>
                                <p style="margin: 0; color: #999; font-weight: 500;">No hero image uploaded yet</p>
                            </div>
                        </div>
                    <% } %>
                </div>

            </section>

        </div>
    </div>
</main>

<script>
    const dropZone = document.getElementById('dropZone');
    const heroInput = document.getElementById('heroInput');
    const filePreview = document.getElementById('filePreview');

    // Click to select file
    dropZone.addEventListener('click', () => heroInput.click());

    // Drag and drop
    dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.style.borderColor = '#ec4899';
        dropZone.style.backgroundColor = '#fdf2f8';
    });

    dropZone.addEventListener('dragleave', () => {
        dropZone.style.borderColor = 'var(--color-border)';
        dropZone.style.backgroundColor = 'transparent';
    });

    dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.style.borderColor = 'var(--color-border)';
        dropZone.style.backgroundColor = 'transparent';
        
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            heroInput.files = files;
            updatePreview(files[0]);
        }
    });

    // File input change
    heroInput.addEventListener('change', (e) => {
        if (e.target.files.length > 0) {
            updatePreview(e.target.files[0]);
        }
    });

    function updatePreview(file) {
        filePreview.innerHTML = '';
        
        if (file && file.type.startsWith('image/')) {
            const reader = new FileReader();
            reader.onload = (e) => {
                const preview = document.createElement('div');
                preview.style.marginTop = '1rem';
                preview.innerHTML = `
                    <div style="border: 1px solid var(--color-border); border-radius: 8px; overflow: hidden;">
                        <img src="${e.target.result}" alt="Preview" style="width: 100%; height: 300px; object-fit: cover;">
                    </div>
                    <p style="margin: 0.75rem 0 0 0; color: var(--color-text-secondary); font-size: 0.9rem;">
                        <strong>Selected:</strong> ${file.name}
                    </p>
                `;
                filePreview.appendChild(preview);
            };
            reader.readAsDataURL(file);
        }
    }
</script>

<%- include('./partials/Footer.ejs') %>
