                                    </div> -->
                                    <div class="bg-white p-6 rounded-lg shadow-sm mb-8" style="border:1px solid var(--color-border);padding:1.5rem;border-radius:8px;">
                                        <h3 class="text-lg font-bold mb-4 font-heading text-primary" style="font-size:1.2rem;margin-bottom:1rem;">
                                            <%= editingCategory ? "Edit Category" : "Add New Category" %>
                                        </h3>

                                        <form action="<%= editingCategory ? '/seller/edit-category/' + editingCategory._id : '/seller/create-category' %>" method="post" enctype="multipart/form-data" style="display:flex;gap:1rem;align-items:flex-end;flex-wrap:wrap;">
                                            <!-- Category Name -->
                                            <div style="flex:1;min-width:200px;">
                                                <label style="display:block;margin-bottom:0.5rem;">
                                                    Category Name
                                                </label>
                                                <input type="text" name="name" value="<%= editingCategory ? editingCategory.name : '' %>" required style="width:100%; padding:0.8rem; border:1px solid var(--color-border);border-radius:4px;">
                                            </div>

                                            <!-- Category Image -->
                                            <div style="flex:1;min-width:200px;">
                                                <label style="display:block;margin-bottom:0.5rem;">
                                                    Category Label Image
                                                </label>

                                                <input type="file" name="image" value="<%= editingCategory ? '' : 'required' %>" style="width:100%; padding:0.8rem; border:1px solid var(--color-border);border-radius:4px;">
                                            </div>

                                            <!-- Existing Image Preview (Edit Mode) -->
                                            <!-- <% if (editingCategory && editingCategory.image) { %>
                                            <div style="flex:1; min-width:120px;">
                                                <img src="<%= editingCategory.image %>" style="width:100px; height:80px; object-fit:cover; border-radius:4px;">
                                            </div>
                                            <% } %> -->

                                            <div style="display: flex; gap: 0.7rem;">
                                                <!-- Submit Button -->
                                                <button type="submit" class="btn btn-primary">
                                                    <%= editingCategory ? "Update Category" : "Add Category" %>
                                                </button>

                                                <!-- Cancel Edit -->
                                                <% if (editingCategory) { %>
                                                <a href="/seller/categories" class="btn btn-primary cancel">
                                                    Cancel
                                                </a>
                                                <% } %>
                                            </div>

                                        </form>
                                    </div>


                                    <!-- Existing Categories List -->
                                    <h3 style="font-size: 1.2rem; margin-bottom: 1rem; margin-top: 2rem;">Existing Categories</h3>
                                    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 1.5rem;">
                                        <% if(typeof categories !=='undefined' && categories.length> 0) { %>
                                            <% categories.forEach(function(cat) { %>
                                                <div style="border: 1px solid var(--color-border); border-radius: 8px; overflow: hidden; text-align: center;">
                                                    <div style="height: 120px; overflow: hidden;">
                                                        <img src="<%= cat.image %>" alt="<%= cat.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                                                    </div>
                                                    <div style="padding: 1rem;">
                                                        <h4 style="margin: 0; color: var(--color-text-primary);">
                                                            <%= cat.name %>
                                                        </h4>
                                                    </div>
                                                    <div>
                                                        <div class="ed-del-container">
                                                            <a href="/seller/categories?edit=<%= cat._id %>" class="btn btn-primary edit">
                                                                Edit 
                                                            </a>
                                                            <button class="btn btn-primary delete" type="button" onclick="openCategoryDeleteModal('<%= cat._id %>')">
                                                                Delete
                                                            </button>
                                                        </div>
                                                        <!-- Delete Modal -->
                                                        <div id="categoryDeleteModal" class="modal-overlay" style="display:none;">
                                                            <div class="modal-box">
                                                                <h3>Delete Category?</h3>
                                                                <p>Are you sure you want to delete this category?</p>
                                                                <div class="modal-actions">
                                                                <button type="button" class="btn btn-primary" onclick="closeCategoryDeleteModal()">Cancel</button>
                                                                <button type="button" class="btn btn-primary" onclick="confirmCategoryDelete()">Delete</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <form id="categoryDeleteForm" method="POST"></form>
                                                    </div>
                                                </div>
                                            <% }) %>
                                            <% } else { %>
                                                <p style="color: var(--color-text-secondary);">No categories found.</p>
                                            <% } %>
                                    </div>

                                </section>

                            </div>
        </div>
    </main>
    
    <script>
        let categoryToDelete = null;

        function openCategoryDeleteModal(id) {
            categoryToDelete = id;
            document.getElementById('categoryDeleteModal').style.display = 'flex';
        }

        function closeCategoryDeleteModal() {
            document.getElementById('categoryDeleteModal').style.display = 'none';
            categoryToDelete = null;
        }

        function confirmCategoryDelete() {
        if(categoryToDelete){
            const form = document.getElementById('categoryDeleteForm');
            form.action = `/seller/delete-category/${categoryToDelete}`;
            form.submit();
        }
        }
    </script>

<%- include('./partials/Footer.ejs') %>